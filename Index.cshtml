@model List<Student>
<div>
    <h1>Student Database System</h1>
    
    @if (Model.Count == 0)
    {
        <h2>No Records are available with Us!!!</h2>
    }
    else
    {
        <table class="table table-bordered">
        <tr>
            <th>student Id</th>
            <th>Student Name</th>
            <th>Student Email</th>
            <th>Student Age</th>
            <th>Student MobileNo</th>
            <th>Options</th>
        </tr>
            @foreach (var std in Model)
            {
                <tr>
                <td>@std.Id</td>
                    <td>@std.StudentName</td>
                    <td>@std.Email</td>
                    <td>@std.age</td>
                    <td>@std.mobileno</td>
                    <td>
                        @Html.ActionLink("More...", "OnFind", new { id = std.Id })
                        @Html.ActionLink("Remove...","OnDelete",new {id = std.Id})
                        
                </td>
                </tr>
                    
                
            }
        </table>
        }
    
   
    </div>